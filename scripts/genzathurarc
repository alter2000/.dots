#!/bin/sh
# generate a full zathura config file with colors from pywal

source $HOME/.cache/wal/colors.sh

cat << EOF
# autogenerated theme by genzathurarc

set notification-error-bg       "$color0"
set notification-error-fg       "$color1"
set notification-warning-bg     "$color0"
set notification-warning-fg     "$color1"
set notification-bg             "$color0"
set notification-fg             "$color14"

set completion-group-bg         "$color0" 
set completion-group-fg         "$color3"
set completion-bg               "$color0"
set completion-fg               "$color3"
set completion-highlight-bg     "$color4"
set completion-highlight-fg     "$color13"

# Define the color in index mode
set index-bg                    "$color0"
set index-fg                    "#93a1a1"
set index-active-bg             "#586e75"
set index-active-fg             "#eee8d5"
set inputbar-bg                 "$color0"
set inputbar-fg                 "#eee8d5"
set statusbar-bg                "$color0"
set statusbar-fg                "#93a1a1"
set highlight-color             "#657b83"
set highlight-active-color      "#268bd2"
set default-bg                  "$color0"
set default-fg                  "#93a1a1"

# Recolor book content's color
set recolor                     true
set recolor-lightcolor          "$color7" 
set recolor-darkcolor           "$color0" 
# set recolor-keephue             true      # keep original color

EOF
