[module/redshift]
type = custom/script
tail = true
exec = ~/.dots/polybar/redshift
click-left = redshift -c ~/.dots/redshift.conf &
click-right = redshift -x && pkill -15 redshift &
format = <label>
label = "%output%"
format-underline = ${colors.orange}


