; ---------- global --------------

[colors]
foreground        = ${xrdb:color7}
foreground_bright = ${xrdb:color8}
background        = ${xrdb:color0}
modb              = ${xrdb:color0}
modb1             = ${xrdb:color0}
modb2             = ${xrdb:color0}
red     = ${xrdb:color1}
orange  = ${xrdb:color9}
yellow  = ${xrdb:color3}
green   = ${xrdb:color2}
cyan    = ${xrdb:color6}
blue    = ${xrdb:color4}
magenta = ${xrdb:color5}
brown   = ${xrdb:color7}

[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true


; ------------ bars ---------------

[bar/fab]
width    = 75
height   = 75
offset-x = 40
offset-y = 965

locale     = de_DE.UTF-8
background = ${colors.green}
foreground = ${colors.background}

font-0 = Iosevka Term:size=12:antialias=true;0

modules-left   =
modules-center = plus
modules-right  =

tray-position    =

radius = 37.5

spacing             = 1
padding-left        = 0
padding-right       = 0
module-margin-left  = 0
module-margin-right = 0

[bar/stats]
width    = 350
