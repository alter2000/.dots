#!/usr/bin/env bash
set -eu

# requires xrdb from x11-xserver-utils

readonly xrdb=$(xrdb -query)

function get() {
    awk "/$@"':/{print $2}' <<< "${xrdb}"
}

echo -e "\033[0;0m      │ std     blk     red     grn     ylw     blu     mag     cyn     wht    "
echo -e "\033[0;0m──────┼────────────────────────────────────────────────────────────────────────"
echo -e "\033[0;0mdark  │ \033[0;39m$(get background)\033[0;30m$(get color0)\033[0;31m$(get color1)\033[0;32m$(get color2) \033[0;33m$(get color3) \033[0;34m$(get color4) \033[0;35m$(get color5) \033[0;36m$(get color6) \033[0;37m$(get color7)"
echo -e "\033[0;0mlight │ \033[0;39m$(get foreground) \033[0;90m$(get color8) \033[0;91m$(get color9) \033[0;92m$(get color10) \033[0;93m$(get color11) \033[0;94m$(get color12) \033[0;95m$(get color13) \033[0;96m$(get color14) \033[0;97m$(get color15)"
